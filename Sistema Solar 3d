      color:0x4B70DD, emissive:0x000011, inclination: 1.8,
      moons:[
        { name:"Trit√≥n", distAU:0.25, size:0.7*SIZE_SCALE, periodDays:5.88, rotationHours:141.0, color:0xE6E6FA }
